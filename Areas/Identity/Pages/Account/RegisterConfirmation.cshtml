@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";    
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    Niestety nie posiadam usługi do wysyłania maili.
    Naciśnij  <a id="confirm-link" href="@Model.EmailConfirmationUrl">TUTAJ</a> aby zatwierdzić utworzenie nowego konta
</p>
    }
    else
    {
<p>
        Sprawdź swoją skrzynkę mailową
</p>
    }
}

