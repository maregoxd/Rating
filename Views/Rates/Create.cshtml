@model Rating.Models.Rate

@{
    ViewData["Title"] = "Create";
}

<h1>Oceń</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Value" class="control-label">Ocena</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemId" class="control-label" hidden></label>
                <input asp-for="ItemId" class ="form-control" value="@ViewBag.Item" asp-items="ViewBag.ItemId" hidden></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Oceń" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Items" asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
